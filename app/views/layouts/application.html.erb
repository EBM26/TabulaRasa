<!DOCTYPE html>
<html>
<head>
  <title>TabulaRasa</title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <link href='http://fonts.googleapis.com/css?family=Gloria+Hallelujah' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  
</head>

<% if current_user %> <!-- logged in button and body style if logged in -->
<body ng-app="tabulaApp" class="userbody">
<div class="text-right">
<button type="button" class="btn btn-default login-button"><span class="glyphicon glyphicon-user"></span> 
  <%= "Logged in as " + current_user.name + ' | ' %><%= link_to 'Logout', logout_path %>
</button>
</div>
  <% else %>

<body ng-app="tabulaApp" id="welcome-body"> <!-- not logged in button and body style -->
<div class="text-right">
<button type="button" class="btn btn-default login-button hvr-bounce-out" id="button"><span class="glyphicon glyphicon-hand-up"></span> Press Here to Log in or Signup </button>
  <% end %>
  </div><br>


<%= yield %>

<!-- navbar bottom code -->
<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container text-right">
    <h4>Created by <em><u><a href="https://github.com/EBM26" class="hvr-pulse">EBM26</a></u></em> <span class="glyphicon glyphicon-knight"></span></h4>
  </div>
</nav>

</body>
</html>
